<idea-plugin>
	<name>NUnit</name>
	<depends>org.mustbe.consulo.dotnet.core</depends>
	<depends optional="true">org.mustbe.consulo.dotnet.mono</depends>
	<depends optional="true">org.mustbe.consulo.microsoft.dotnet</depends>

	<extensions defaultExtensionNs="com.intellij">
		<testFramework implementation="org.mustbe.consulo.nunit.NUnitTestFramework"/>
		<sdkType implementation="org.mustbe.consulo.nunit.bundle.NUnitBundleType"/>
		<configurationType implementation="org.mustbe.consulo.nunit.run.NUnitConfigurationType" />

		<moduleExtensionProvider key="microsoft-nunit"
								 parentKey="microsoft-dotnet"
								 name="NUnit"
								 icon="/icons/nunit.png"
								 immutableClass="org.mustbe.consulo.nunit.module.extension.MicrosoftNUnitModuleExtension"
								 mutableClass="org.mustbe.consulo.nunit.module.extension.MicrosoftNUnitMutableModuleExtension"/>
		<moduleExtensionProvider key="mono-nunit"
								 parentKey="mono-dotnet"
								 name="NUnit"
								 icon="/icons/nunit.png"
								 immutableClass="org.mustbe.consulo.nunit.module.extension.MonoNUnitModuleExtension"
								 mutableClass="org.mustbe.consulo.nunit.module.extension.MonoNUnitMutableModuleExtension"/>

	</extensions>
</idea-plugin>